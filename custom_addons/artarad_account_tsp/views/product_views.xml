<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_form_product_template_inherit" model="ir.ui.view">
            <field name="name">view.form.product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[last()]" position="after">
					<page string="TSP">
						<group>
							<group>
								<field name="tsp_code" />
							</group>
						</group>
					</page>
                </xpath>
            </field>
        </record>
		
        <record id="view_form_product_product_inherit" model="ir.ui.view">
            <field name="name">view.form.product.product.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[last()]" position="after">
					<page string="TSP">
						<group>
							<group>
								<field name="tsp_variant_code" />
							</group>
						</group>
					</page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>