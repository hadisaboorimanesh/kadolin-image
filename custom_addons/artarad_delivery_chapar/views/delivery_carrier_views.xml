<odoo>
  <record id="view_delivery_carrier_form_chapar" model="ir.ui.view">
    <field name="name">delivery.carrier.form.chapar</field>
    <field name="model">delivery.carrier</field>
    <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Chapar" invisible="delivery_type != 'chapar'">
          <group>
            <group string="Credentials">
              <field name="chapar_username"/>
              <field name="chapar_password" password="True"/>
            </group>
            <group string="Sender Info">
              <field name="chapar_sender_city"/>
              <field name="chapar_sender_person"/>
              <field name="chapar_sender_company"/>
              <field name="chapar_sender_telephone"/>
              <field name="chapar_sender_mobile"/>
              <field name="chapar_sender_email"/>
              <field name="chapar_sender_address"/>
              <field name="chapar_sender_postcode"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>