<odoo>
    <record id="view_payment_ras_wizard" model="ir.ui.view">
        <field name="name">payment.ras.wizard.form</field>
        <field name="model">payment.ras.wizard</field>
        <field name="arch" type="xml">
            <form string="نتیجه تاریخ راس">
                <group>
                        <field name="base_date"/>
                        <field name="ras_date" force_save="1"/>
                        <field name="payment_ids" widget="many2many_tags"/>

                </group>
                <footer>
                    <button string="بستن" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
