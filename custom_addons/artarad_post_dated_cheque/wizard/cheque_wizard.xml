<odoo>
    <record id="view_change_cheque_state_wizard_form" model="ir.ui.view">
        <field name="name">change.cheque.state.wizard.form</field>
        <field name="model">change.cheque.state.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Action Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="payment_ids" invisible="1" />
                            <field name="journal_id"/>

                            <field name="debit_account"/>
                            <field name="new_cheque_state"/>


                        </group>
                        <group>
                            <field name="transaction_date"/>
                            <field name="credit_account"/>


                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>