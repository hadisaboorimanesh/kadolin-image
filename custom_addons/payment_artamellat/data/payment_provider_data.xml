<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="payment_method_mellat" model="account.payment.method">
            <field name="name">Mellat (provider)</field>
            <field name="code">mellat</field>
            <field name="payment_type">inbound</field>
        </record>

        <record id="account_payment_method_mellat_in" model="payment.method">
            <field name="name">Mellat (provider)</field>
            <field name="code">mellat</field>
            <field name="sequence">1000</field>
            <field name="active">False</field>
            <field name="image" type="base64" file="payment_artamellat/static/src/img/logo.png"/>
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">False</field>
            <field name="support_refund">partial</field>


        </record>

        <record id="payment_provider_mellat" model="payment.provider">
            <field name="name">Mellat</field>
            <field name="code">mellat</field>
            <field name="image_128" type="base64" file="payment_artamellat/static/src/img/logo.png"/>
            <field name="module_id" ref="base.module_payment_artamellat"/>
            <field name="redirect_form_view_id" ref="redirect_form"/>
            <field name="payment_method_ids"
                   eval="[(6, 0, [
                   ref('payment_method_mellat'),

               ])]"/>
        </record>

        <!--        ########-->


    </data>
</odoo>
