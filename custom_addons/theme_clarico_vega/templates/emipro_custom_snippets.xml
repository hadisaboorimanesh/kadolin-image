                <div class="container pb96 pt96 my-lg-4">
                    <div class="row content te_text_img_left_right t_zoom_img_effect align-items-center">
                        <div class="carousel-content col-lg-5 py-5 py-sm-3 te_slider13_content">
                            <h6 class="te_slider13_sub_heading text-uppercase o_animated_text o_animate o_visible mb-3 o_default_snippet_text o_animate_both_scroll o_anim_slide_in o_anim_from_right o_animated">
                                Summer 2024
                            </h6>
                            <h2 class="te_carousel_text text-black mb-3 te_slider13_heading fw-bold d-block text-uppercase o_animated_text o_animate o_visible o_default_snippet_text o_anim_slide_in o_anim_from_right o_animated o_animate_both_scroll">
                                Spring Sale 30% Off
                            </h2>
                            <h5 class="t_carousel_subtext te_slider13_text mb-3 fw-normal o_animated_text o_animate o_visible o_default_snippet_text o_anim_slide_in o_anim_from_right o_animated o_animate_both_scroll">
                                Limited offer for season sale
                            </h5>
                            <section class="te_slider13_button" data-name="Buttons">
                                <a href="#"
                                   class="btn btn-primary mt-1 rounded-0 te_theme_button text-uppercase mt-1 px-4 py-3 o_default_snippet_text o_animate o_anim_rotate_in o_animate_both_scroll o_visible o_animated">
                                    Discover Now
                                </a>
                            </section>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </template>

    <!--=============== Full Slider style 3 ================== -->
    <template id="full_slider_style_3" name="Full screen 3">
        <section class="s_carousel_wrapper slider_style_3" data-vxml="001">
            <div id="myCarousel3" class="s_carousel s_carousel_default carousel slide d-flex carousel-fade" data-bs-ride="carousel" data-bs-interval="10000">
                <ol class="carousel-indicators d-md-flex d-none">
                    <li data-bs-target="#myCarousel3" data-bs-slide-to="0" class="active"/>
                    <li data-bs-target="#myCarousel3" data-bs-slide-to="1"/>
                </ol>
                <div class="carousel-inner te_arrow_small">
                    <t t-call="theme_clarico_vega.full_slider_style_3_carousel">
