                    </t>
                    <t t-call="theme_clarico_vega.full_slider_style_3_carousel"/>
                    <!-- Controls -->
                    <div class="carousel-control-prev" data-bs-target="#myCarousel3" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
