    <template id="promocode_ept" name="Promo code">
        <section class="promocode_ept container p0_sm">
            <div class="oe_img_bg oe_custom_bg pt32 pb32" style="background-image: url('/theme_clarico_vega/static/src/img/promo.jpg'); background-size: auto; background-position: center;">
                <div class="row s_nb_column_fixed">
                    <div class="col-lg-12 te_title_2 text-center">
