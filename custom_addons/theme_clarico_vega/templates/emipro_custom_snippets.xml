<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Theme vega snippets settings-->
    <template id="theme_vega_snippets" inherit_id="website.snippets">
        <xpath expr="//t[@id='default_snippets']//snippets[@id='snippet_groups']" position="before">
            <!-- Snippet groups -->
            <snippets id="snippet_groups" string="Theme Snippets">
                <t snippet-group="theme" t-snippet="website.s_snippet_group" string="Theme"
                    t-thumbnail="/theme_clarico_vega/static/src/img/snippets/theme-snippet.jpg"/>
                <t snippet-group="static-snippet" t-snippet="website.s_snippet_group" string="Static Snippets"
                    t-thumbnail="/theme_clarico_vega/static/src/img/snippets/static_snippet.jpg"/>
            </snippets>
        </xpath>
        <xpath expr="//t[@id='default_snippets']" position="after">
            <t id="default_snippets">
                <snippets id="snippet_structure" string="Theme Snippet">
                    <t t-snippet="theme_clarico_vega.main_banner_style" string="Theme Banner" group="theme">
                        <keywords>hero, jumbotron</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.full_slider_style_1" string="Full Slider Style 1" group="theme">
                        <keywords>Sliders, Full screen 1</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.full_slider_style_2" string="Full Slider Style 2" group="theme">
                        <keywords>Sliders, Full screen 2</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.full_slider_style_3" string="Full Slider Style 3" group="theme">
                        <keywords>Sliders, Full screen 3</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.s_title_1_ept" string="Title" group="theme">
                        <keywords>Title, Title Style 1</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.s_title_2_ept" string="Title" group="theme">
                        <keywords>Title, Title Style 2</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.s_title_3_ept" string="Title" group="theme">
                        <keywords>Title, Title Style 3</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.offer_siderbar_popup" string="Offer Sidebar" group="theme">
                        <keywords>Offer, Newsletter</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.promocode_ept" string="Promo code" group="theme">
                        <keywords>Promocode, Discount</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.slider_style_1" string="Slider Style 1" group="static-snippet">
                        <keywords>Sliders, Slider style 1</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.slider_style_2" string="Slider Style 2" group="static-snippet">
                        <keywords>Sliders, Slider style 2</keywords>
                    </t>
                    <t t-snippet="theme_clarico_vega.slider_style_3" string="Slider Style 3" group="static-snippet">
                        <keywords>Sliders, Slider style 3</keywords>
                    </t>
                </snippets>
            </t>
        </xpath>
    </template>


    <!--=================== Main Banner =================-->
    <template id="main_banner_style" name="Main Banner Style">
        <section class="te_banner_s3">
            <section class="pt32 oe_img_bg oe_custom_bg"
                     style="background-image: url('/theme_clarico_vega/static/src/img/snippets/banner.jpg'); background-position: center">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 te_banner_s3_content">
                            <div class="te_banner_sub_heading fw-bold">Lorem</div>
                            <div class="te_banner_main_heading fw-bold">Lorem Ipsum</div>
                            <p class="">
                                Lorem ipsum dolor s it amet, consectetur adipisicing elit, sed do
                                eiusmod
                                tempor incididunt ut labore et dolore magna ipsum dolor sit amet,
                            </p>
                            <section class="s_btn pt32 pb16" data-name="Buttons">
                                <a href="#" class="btn btn-primary shop_now_btn te_theme_button o_default_snippet_text">
                                    Read More
                                </a>
                            </section>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container">
                <div class="te_category_banner_block">
                    <div class="row">
                        <t t-call="theme_clarico_vega.main_banner_style_content">
                            <t t-set="items" t-value="5"/>
                        </t>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="main_banner_style_content">
        <t t-foreach="items" t-as="item">
            <t t-if="item &gt; 0">
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 d-inline-block">
                    <div class="te_banner_categ_block">
                        <section class="te_categ_content">
                            <a href="#" class="d-flex align-middle text-decoration-none justify-content-center align-items-center">
                                <img class="img img-fluid"
                                     src="/theme_clarico_vega/static/src/img/snippets/insurance.webp"/>
                                <div class="te_banner_categ_name d-inline-block align-middle align-items-center">
                                    Lorem Ipsum
                                </div>
                            </a>
                        </section>
                    </div>
                </div>
            </t>
            <t t-set="item" t-value="item-1"/>
        </t>
    </template>

    <!--=================== Blog Post Style 1 =================-->
    <template id="dynamic_filter_template_blog_post_style_template_3" name="Blog Template Style 1"
              inherit_id="website_blog.dynamic_filter_template_blog_post_list">
        <xpath expr="//div[hasclass('s_blog_posts_post')]" position="attributes">
            <attribute name="class">d-flex s_blog_posts_post position-relative w-100</attribute>
        </xpath>
        <xpath expr="//a[hasclass('text-decoration-none')]" position="replace">
            <a class="s_blog_posts_post_cover flex-grow-0 flex-shrink-0 align-self-baseline position-relative" t-att-href="data['call_to_action_url']" t-att-title="'Read' + data['name']">
                <t t-call="website.record_cover">
                    <t t-set="_record" t-value="record"/>
                    <t t-set="_resize_height" t-value="512"/>
                    <t t-set="_resize_width" t-value="512"/>
                    <t t-set="additionnal_classes" t-value="'w-100 h-100 bg-200 position-absolute'"/>
                </t>
            </a>
            <div class="ps-2">
                <div class="te_blog_post_date s_blog_posts_post">
                    <i class="fa fa-clock-o"/>
                    <span t-field="record.post_date" t-options='{"format": "MMMM dd, yyyy"}'/>
                </div>
                <a class="text-decoration-none" t-att-title="'Read' + data['name']" t-att-href="data['call_to_action_url']">
                    <div class="s_blog_posts_post_title mb-1">
                        <span t-if="is_sample" class="bg-primary text-uppercase px-1">Sample</span>
                        <span t-field="record.name"/>
                    </div>
                </a>
                <div class="s_blog_posts_post_subtitle mb-1 d-none d-sm-block" t-field="record.subtitle"/>
            </div>
        </xpath>
    </template>

    <!--=================== Blog Post Style 2 =================-->
    <template id="dynamic_filter_template_blog_post_style_template_5" name="Blog Template Style 2"
              inherit_id="website_blog.dynamic_filter_template_blog_post_big_picture">
        <xpath expr="//div[hasclass('s_blog_posts_post')]" position="replace">
            <figure t-foreach="records" t-as="data" class="my-3 w-100 s_blog_posts_post" data-number-of-elements="3">
                <t t-set="record" t-value="data['_record']"/>
                <a class="s_blog_posts_post_cover d-flex flex-column shadow-sm overflow-hidden rounded text-decoration-none" t-att-href="data['call_to_action_url']">
                    <t t-call="website.record_cover">
                        <t t-set="_record" t-value="record"/>
                        <t t-set="_resize_height" t-value="512"/>
                        <t t-set="_resize_width" t-value="512"/>
                        <t t-set="use_filters" t-value="True"/>
                        <t t-set="additionnal_classes" t-value="'h-100 w-100 bg-600 position-absolute'"/>
                    </t>
                    <figcaption class="text-center w-100 h-100 px-3 d-flex flex-column flex-grow-1">
                        <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
                        <div class="s_blog_posts_post_title text-white" t-field="record.name"/>
                        <div class="s_blog_posts_post_subtitle text-white" t-field="record.subtitle"/>
                        <div class="te_blog_post_date">
                            <span t-field="record.post_date" t-options='{"format": "MMMM dd, yyyy"}'/>
                        </div>
                    </figcaption>
                    <span class="te_icon_r_more text-center fw-normal">
                        <span class="fa fa-arrow-right"/>
                    </span>
                </a>
            </figure>
        </xpath>
    </template>

    <!--====================== Full Slider Style 2 ============================-->
    <template id="full_slider_style_2" name="Full screen 2">
        <section class="s_carousel_wrapper te_slider_full_screen_5" data-vxml="001">
            <div id="myCarousel" class="s_carousel s_carousel_default carousel carousel-fade slide d-flex" data-bs-ride="carousel" data-bs-interval="10000">
                <ol class="carousel-indicators d-md-flex d-none">
                    <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"/>
                    <li data-bs-target="#myCarousel" data-bs-slide-to="1"/>
                </ol>
                <div class="carousel-inner te_arrow_small">
                    <t t-call="theme_clarico_vega.slider_style_2_carousel">
                        <t t-set="_item_class" t-value="'active'"/>
                    </t>
                    <t t-call="theme_clarico_vega.slider_style_2_carousel"/>
                    <!-- Controls -->
                    <div class="carousel-control-prev" data-bs-target="#myCarousel" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
                        <span class="carousel-control-prev-icon"/>
                    </div>
                    <div class="carousel-control-next" data-bs-target="#myCarousel" data-bs-slide="next" role="img" aria-label="Next" title="Next">
                        <span class="carousel-control-next-icon"/>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="slider_style_2_carousel">
        <div t-attf-class="#{_item_class} carousel-item oe_custom_bg oe_img_bg pt16 pb16" style="background-color:rgb(239,239,239);" data-name="Slide">
            <div class="container">
                <div class="row align-items-center">
                    <section class="te_slider_left_content col-lg-6 col-md-6 t_img_hover_1">
                        <img class="img img-fluid o_animate o_animate_preview o_anim_zoom_in img_hotspot_setting" src="/theme_clarico_vega/static/src/img/snippets/modern-comfortable.jpg"/>
                    </section>
                    <section class="te_slider_right_content col-lg-5 col-md-5">
                        <div class="te_sub_title o_animated_text o_animate o_anim_slide_in o_anim_from_top o_visible o_animated">Lorem ipsum</div>
                        <div class="te_main_title">oblique<br/>pertinacia</div>
                        <section class="s_btn"><a href="#" class="btn btn-primary te_theme_button te_slider_9_btn o_animate o_anim_slide_in o_anim_from_bottom o_visible o_animated">Know more</a></section>
                    </section>
                </div>
            </div>
        </div>
    </template>

    <!--============== next/prev button =================-->
    <template id="next_prev_button" name="next prev">
        <div class="carousel-control-prev" data-bs-target="#myCarousel" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
            <span class="carousel-control-prev-icon"/>
        </div>
        <div class="carousel-control-next" data-bs-target="#myCarousel" data-bs-slide="next" role="img" aria-label="Next" title="Next">
            <span class="carousel-control-next-icon"/>
        </div>
    </template>

    <!--=============== Full Slider style 1 ================== -->
    <template id="full_slider_style_1" name="Full screen 1">
        <section class="s_carousel_wrapper" data-vxml="001" data-vcss="001">
            <t t-set="uniq" t-value="datetime.datetime.now().microsecond"/>
            <div t-attf-id="fullSliderCarousel{{uniq}}" class="s_carousel s_carousel_default carousel slide d-flex" data-bs-ride="true" data-interval="10000">
                <div class="carousel-inner te_arrow_small te_slider_13_main">
                    <t t-call="theme_clarico_vega.full_slider_style_1_carousel">
                        <t t-set="is_active" t-valuef="active"/>
                    </t>
                    <t t-call="theme_clarico_vega.full_slider_style_1_carousel"/>
                    <t t-call="theme_clarico_vega.full_slider_style_1_carousel"/>
                </div>
                <!-- Indicators -->
                <div class="carousel-indicators o_not_editable">
                    <button type="button" t-attf-data-bs-target="#fullSliderCarousel{{uniq}}" data-bs-slide-to="0"
                            class="active" aria-label="Carousel indicator"/>
                    <button type="button" t-attf-data-bs-target="#fullSliderCarousel{{uniq}}" data-bs-slide-to="1"
                            aria-label="Carousel indicator"/>
                    <button type="button" t-attf-data-bs-target="#fullSliderCarousel{{uniq}}" data-bs-slide-to="2"
                            aria-label="Carousel indicator"/>
                </div>
            </div>
        </section>
    </template>
    <template id="full_slider_style_1_carousel">
        <div t-attf-class="carousel-item #{is_active} px-0" data-name="Slide" >
            <section t-attf-class="oe_img_bg oe_custom_bg pt96 pb96 oe_custom_bg te_slider_13_sub"
                     data-scroll-background-ratio="1"
                     style="background-image: url('/theme_clarico_vega/static/src/img/snippets/banner-3.jpg'); background-size: cover;">
