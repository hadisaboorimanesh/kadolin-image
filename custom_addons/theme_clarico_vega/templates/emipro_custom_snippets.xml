    <template id="slider_style_1" name="Static slider 1">
        <section class="container te_slider_screen_1">
            <div class="row">
                <section class="s_carousel_wrapper col-lg-8" data-vxml="001">
                    <div id="myCarousel" class="s_carousel s_carousel_default carousel carousel-fade slide d-flex h-100" data-interval="10000">
                        <ol class="carousel-indicators d-md-flex justify-content-end pe-5">
