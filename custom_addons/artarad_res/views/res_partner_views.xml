<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_res_partner_inherit" model="ir.ui.view">
        <field name="name">view.form.res.partner.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
             <xpath expr="//field[@name='city']" position="after">
                <field name="zone_id" placeholder="Zone" class="o_address_city"
                       domain="[('city_id','=',city_id)]"
                       readonly="type == 'contact' and parent_id"/>

            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="national_number" string="National Number" invisible="company_type == 'company'" />
                <field name="national_number" string="National ID" invisible="company_type == 'person'" />
                <field name="code_atba" string="کد اتباع" invisible="company_type == 'company'" />
                <field name="registeration_number" invisible="company_type == 'person'" />
                <field name="economic_number" invisible="company_type == 'person'" />
                <field name="authentication_state" />
            </xpath>
        </field>
    </record>

</odoo>