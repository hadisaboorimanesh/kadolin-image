<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_snappay" model="account.payment.method">
        <field name="name">SnapPay (provider)</field>
        <field name="code">snappay</field>
        <field name="payment_type">inbound</field>
    </record>

    <record id="payment_method_snap" model="payment.method">
        <field name="name">Snap</field>
        <field name="code">snappay</field>
        <field name="sequence">1000</field>
        <field name="active">False</field>
        <field name="image" type="base64" file="artarad_payment_snappay/static/description/snap.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
        <field name="support_refund">partial</field>


    </record>

    <record id="payment_provider_snappay" model="payment.provider">
        <field name="name">SnapPay</field>
        <field name="code">snappay</field>
        <field name="image_128" type="base64" file="artarad_payment_snappay/static/description/snap.png"/>
        <field name="module_id" ref="base.module_artarad_payment_snappay"/>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="state">disabled</field>

        <field name="payment_method_ids"
               eval="[(6, 0, [
                   ref('artarad_payment_snappay.payment_method_snap'),

               ])]"/>
    </record>

</odoo>