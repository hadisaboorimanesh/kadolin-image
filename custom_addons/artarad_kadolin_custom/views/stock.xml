<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_type_form_unreserve_toggle" model="ir.ui.view">
        <field name="name">stock.picking.type.form.unreserve.toggle</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reservation_method']" position="before">
                <field name="pack_no_reserve"/>
                <field name="type_code"/>
            </xpath>
        </field>
    </record>


    <record id="stock_picking_view_kanban" model="ir.ui.view">
        <field name="name">stock.picking.view.kanban.barcode.picking.batch</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_barcode.stock_picking_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div" position="after">
                <t t-if="record.pakage_id.raw_value">
                    <div style="background-color: #ffcc00; padding:5px; border-radius:5px; text-align:center;">
                        <field name="pakage_id" nolabel="1" style="font-weight:bold; color:#000;"/>
                    </div>
                </t>
            </xpath>
        </field>
    </record>


    <record id="view_picking_form_inherit_label_button" model="ir.ui.view">
        <field name="name">stock.picking.form.print.lot.labels</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- دکمه را در button_box می‌گذاریم -->
            <xpath expr="//header" position="inside">
                <button name="action_print_receipt_lot_labels"
                        type="object"
                        string="چاپ لیبل سریال‌ها"
                        class="oe_highlight"
                        groups="stock.group_stock_user"
                />

                <button name="action_create_serial_numbers"
                        type="object"
                        string="تولید سریال‌ها"
                        class="oe_highlight"
                        invisible="picking_type_code !='incoming' or state in ('done','cancel')"
                        groups="stock.group_stock_user"
                />
            </xpath>
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="delivery_slot" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_delivery_carrier_form_inherit_percentage" model="ir.ui.view">
        <field name="name">delivery.carrier.form.capacity.percentage</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tracking_url']" position="after">
                <field name="use_for_pack"/>
                <field name="pack_distribution_percent"/>
                <field name="supported_city_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

</odoo>