<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.auth.signup</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
                <xpath expr="//setting[@id='allow_import']" position="before">

                <h2>Sign up</h2>
                <div class="row mt16 o_settings_container" name="multi_company">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auth_signup_with_mobile" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auth_signup_with_mobile" string="Mobile Phone" />
                            <div class="text-muted">
                                Enable Mobile field in Signup page
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>